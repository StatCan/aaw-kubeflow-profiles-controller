    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Gitea Profile Controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "main.go",
            "args": [
